<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Logging -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File Logging -->
        <File name="FileLogger" fileName="logs/application.log" append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n%throwable"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Suppress TestNG internal INFO logs -->
        <Logger name="org.testng.internal.Utils" level="warn" additivity="false">
			<AppenderRef ref="FileLogger" />
			<AppenderRef ref="Console" />
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileLogger" />
        </Root>
        <Root level="pass">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileLogger" />
        </Root>
		<Root level="fail">
		<AppenderRef ref="Console" />
		<AppenderRef ref="FileLogger" />
		</Root>
    </Loggers>
</Configuration>
